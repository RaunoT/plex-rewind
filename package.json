    "next": "^14.2.5",
    "next-auth": "^4.24.7",
    "next-runtime-env": "^3.2.2",
    "qs": "^6.13.0",
    "react": "^18.3.1",
    "react-aria-components": "^1.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "stories-react": "^1.1.2",
    "uuid": "^10.0.0",
    "xml2js": "^0.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@saithodev/semantic-release-backmerge": "^4.0.1",
